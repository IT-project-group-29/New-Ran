
@{
    ViewBag.Title = "Detail";
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <style>
        .div {
            position: relative;
            top: 100px;
        }

        h2 {
            position: absolute;
            top: 100px;
        }
    </style>
</head>
@{
    var userDetail = ViewBag.getPersonID;
}

<body>
    <h2>Client Detail</h2>
    <div class="div">
        <dl class="dl-horizontal">
            <dt>
                Client Name:
            </dt>
            <dd>
                @userDetail.UserName
            </dd>
            <dt>
                Client Title:
            </dt>
            <dd>
                @userDetail.title
            </dd>
            <dt>
                Client E-mail:
            </dt>
            <dd>
                @userDetail.Email
            </dd>
            <dt>
                Client Phone Number:
            </dt>
            <dd>
                @userDetail.PhoneNumber
            </dd>
            <dt>
                Company Name:
            </dt>
            <dd>
                @ViewBag.companyName
            </dd>
        </dl>
        <p>
            @Html.ActionLink("Back to List", "Index")
        </p>
    </div>
</body>
</html>

