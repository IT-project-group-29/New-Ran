
@{
    ViewBag.Title = "Delete";
}

<h2>Delete Client</h2>
<html xmlns="http://www.w3.org/1999/xhtml">
@{
    var userDetail = ViewBag.getPersonID;
}
<head>
    <style>
        .div {
            margin-left: 80px;
            margin-top: 80px;
        }

        .downMove {
            margin-left: 100px;
        }

        p {
            margin-top: -25px;
            margin-left: 80px;
        }
    </style>
</head>
<body>
    <h3>Are you sure you want to delete this?</h3>
    <hr style="width=400px" />
    <div class="div">
        <dl class="dl-horizontal">
            <dt>
                Client Name:
            </dt>
            <dd>
                @userDetail.UserName
            </dd>
            <dt>
                Client Title:
            </dt>
            <dd>
                @userDetail.title
            </dd>
            <dt>
                Client E-mail:
            </dt>
            <dd>
                @userDetail.Email
            </dd>
            <dt>
                Client Phone Number:
            </dt>
            <dd>
                @userDetail.PhoneNumber
            </dd>
            <dt>
                Company Name:
            </dt>
            <dd>
                @ViewBag.companyName
            </dd>
        </dl>

    </div>

    <div class="downMove">
        <input type="submit" value="Delete" class="btn btn-default" /> |
        <p>
            @Html.ActionLink("Back to List", "Index")
        </p>
    </div>
</body>
</html>
