@model IEnumerable<WebApplication4.Models.Staff>
@{
    ViewBag.Title = "StaffManagementIndex";
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <style>
        h2 {
            position: absolute;
            top: 100px;
        }

        table {
            position: relative;
            top: 100px;
        }
    </style>
</head>
<body>
    <h2>Staff Management</h2>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    Staff Name
                </th>
                <th>
                    Uni Staff ID
                </th>
                <th>
                    Date Ended
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var db in Model)
            {
                <tr>
                    <td>
                        @db.username
                    </td>
                    <td>
                        @db.uniStaffID
                    </td>
                    <td>
                        @db.dateEnded
                    </td>
                    <td style="white-space:nowrap;">
                        @Html.ActionLink("Edit", "Edit", new { id = db.staffID }, new { @class = "btn btn-primary" }) |
                        @Html.ActionLink("Detail", "Detail", new { id = db.staffID }, new { @class = "btn btn-primary" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = db.staffID }, new { @class = "btn btn-primary" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>


