@model IEnumerable<WebApplication4.Models.Staff>
@{
    @*This var is used to get data from controller, because we need data from AspNetUsers' table *@
    ViewBag.Title = "StaffManagementIndex";
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <style>
        table {
            position: relative;
            top: 50px;
        }
    </style>
</head>
<body>
    <h2>Staff Management</h2>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    Staff Name
                </th>
                <th>
                    Uni Staff ID
                </th>
                <th>
                    Date Ended
                </th>
            </tr>
        </thead>
        <tbody>
            @* Use foreach to get all data *@
            @foreach (var db in Model)
            {
                <tr>
                    <td>
                        @* This is used to get data from users we get from AspNetUsers *@
                        @db.username
                    </td>
                    <td>
                        @db.uniStaffID
                    </td>
                    <td>
                        @* Because we use the strongly typed binding Clients as a Model, we can use the db to get the data directly *@
                        @db.dateEnded
                    </td>
                    <td style="white-space:nowrap;">
                        @* The first "Edit" is the name of the page we turn to, the second is the name of the button *@
                        @* The third one is use to pass a parameter, the last one is the style of the button *@
                        @Html.ActionLink("Edit", "Edit", new { id = db.staffID }, new { @class = "btn btn-primary" }) |
                        @Html.ActionLink("Detail", "Detail", new { id = db.staffID }, new { @class = "btn btn-primary" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = db.staffID }, new { @class = "btn btn-primary" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>


