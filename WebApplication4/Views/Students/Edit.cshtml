@model WebApplication4.Models.Students

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Students</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
 

    <div class="form-group">
        <label class=" control-label col-md-2"> Plan Name </label>
        <div class="col-md-10">
            <input style="min-width=300" type="text" value="@Model.Plans.planName"  class=" col-md-10 form-control" name ="planName" readonly="readonly"/>
        </div>
    </div> 

    <div class="form-group">
        <label class=" control-label col-md-2"> Student Name </label>
        <div class="col-md-10">
            <input type="text" value="@Model.uniUserName"  class=" col-md-10 form-control" name="uniUserName" readonly="readonly"/>
        </div>
    </div>

    <div class="form-group">
        <label class=" control-label col-md-2"> Student ID </label>
        <div class="col-md-10">
            <input type="text" value=@Model.uniStudentID class=" col-md-10 form-control" name="uniStudentID" readonly="readonly"/>
        </div>
    </div>

    <div class="form-group">
        <label class=" control-label col-md-2"> GPA </label>
        <div class="col-md-10">
            <input type="text" value=@Model.gpa class=" col-md-10 form-control" name="gpa" readonly="readonly"/>

        </div>
    </div>

    <div class="form-group">
        <label class=" control-label col-md-2"> Student Email</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.studentEmail, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.studentEmail, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class=" control-label col-md-2"> Year </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.year, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.year, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class=" control-label col-md-2"> Semester </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.semester, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.semester, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />@*//Define the submit button. The submit button sends the form data to the server.*@
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index") 
    @*Display the text: Back to List of the connection with the controller index of the current page*@
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval") 
    @*Output the configuration in the bundleconfig.cs script package, and Bundles are defined in the BundleConfig.cs file.*@
}
